<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Dynamic Input</title>
  <link rel="stylesheet" href="../css/home.css">
</head>


<body>
  <div class="container" id="form1">
    <div class="box">
      <div class="inputs">

        <div class="input-box">
          <label for="fname">Resistance (In Ohm):</label>
          <input type="number" id="resistance" name="fname" value="" required><br><br>
        </div>

      
      </div>

      <div class="btn">
        <button class="add-more-input" type="button" name="button">+</button>
      </div>

      <div class="btn">
        <button class="remove-input" type="button" name="button">-</button>
      </div>

      <div class="readings">

        <div class="voltage">
          <div class="input-fields">
            <h1>Readings For Voltage(mV)</h1>
            <div class="reading">
              <input class="reading-i" type="number" name="" value="" placeholder="reading 1" required>
              <input class="reading-i" type="number" name="" value="" placeholder="reading 2" required>
            </div>
          </div>
        </div>

       

      </div>

      <div class="btn submit">
        <button class="submit" type="button" name="submit-button">Submit</button>
        <button type="button" onClick=printForm() >Print Form</button>
      </div>

      <div id="output">
        <div class="result">

          <div class="input-box">
            <label class="l">Resistance:</label>
            <label class="r"></label>
          </div>

          <div class="input-box">
            <label class="l">Voltage values:</label>
            <label class="r"></label>
          </div>

          <div class="input-box">
            <label class="l">Current Values:</label>
            <label class="r"></label>
          </div>

        </div>
        <div class="chart">
          <canvas id="chartId" aria-label="chart" heigth="350" width="580"></canvas>
        </div>

      </div>
    </div>
  </div>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.1.1/chart.min.js"></script>
  <script src=" https://printjs-4de6.kxcdn.com/print.min.js"></script>
  <script src="../javascript/ohms.js" charset="utf-8"></script>
  
</body>

</html>
